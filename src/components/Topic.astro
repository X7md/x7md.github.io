---
const { tag, topic } = Astro.props
const link = tag.replaceAll(" ", "-").toLocaleLowerCase()
---
<div class="flex m-2 min-w-[375px] mex-w-[99vw]">
    <div class="flex-none w-35 relative">
      <a href={"/topics/" + link}>
        <img 
        height="125" 
        width="125" 
        src={topic.image || new URL("/images/1x1/404.png",  "https://x7md.net/")}
        class="absolute object-contain inset-0 w-full h-full " loading="lazy" />
      </a>
    </div>
    <section class="flex-auto">
      <div class="flex flex-wrap">
        <a id="topic-link" href={"/topics/" + link}>
          <h3 class="flex-auto text-md text-slate-900">
            {topic.name}
          </h3>
        </a>
      </div>
      <hr />
      <p class="text-sm text-slate-700">
        
      </p>
    </section>
  </div>