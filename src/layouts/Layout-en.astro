---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" dir="ltr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="navbar">
		<nav class="container row align-items-center">
			<a href="/" title="المدونة" class="col text-start">
				<span dir="ltr" >
					<b>~X7md</b>
				</span>
			</a>
			
			<span class="col text-end">
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 20 20">
					<path fill="currentColor" fill-rule="evenodd" d="M2 4.75A.75.75 0 0 1 2.75 4h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 4.75M2 10a.75.75 0 0 1 .75-.75h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 10m0 5.25a.75.75 0 0 1 .75-.75h14.5a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1-.75-.75" clip-rule="evenodd"/>
				</svg>
			</span>
		</nav>
		</header>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap-grid.css');
	@import url('https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap-utilities.css');
	@import url('https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.amber.min.css');
	@import url('https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.colors.min.css');
	@import url('https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100..900&display=swap');
	:root {
		--pico-font-family: Vazirmatn;
	}
	.navbar {
		position: sticky;
		top: 0;
		z-index: 2;
		background: linear-gradient(transparent, #fddfa614);
		backdrop-filter: blur(0.5px);
	}
</style>
